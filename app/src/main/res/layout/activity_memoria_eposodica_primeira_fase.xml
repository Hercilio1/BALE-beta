<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp"
    tools:context=".Funcionalidades.Bateria.MemoriaEpisodica.MemoriaEpisodicaPrimeiraFaseActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/title_memoria_episodica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_span="6"
            android:text="@string/bateria_tipopergunta_memoria"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bateria_compreensao"
            android:layout_alignStart="@+id/bateria_compreensao"
            android:layout_below="@+id/bateria_compreensao"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_memoria_episodica">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="2dp"
                android:layout_span="4"
                android:background="@color/colorPrimary" />
        </TableRow>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="938dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tableRow"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="Vou lhe mostrar uma série de cartelas. Cada cartela contém quatro figuras. Eu vou lhe falar uma categoria e o(a) senhor(a) deverá apontar e nomear a figura que se encaixa nessa categoria. Vou lhe pedir que preste atenção nas figuras e tente memoriza-las, pois assim que todas as quatro figuras da cartela forem identificadas, eu vou retirar a cartela e o(a) senhor(a) deverá me dizer quais figuras acabou de ver. Podemos começar?"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="Clique na imagem para expandi-la"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:id="@+id/imagem_mem_ep_principal"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_alignBottom="@+id/btn_continuarRelogio"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_continuarRelogio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints"
            android:src="@drawable/mem_ep_fig_a"
            android:layout_marginLeft="12dp" />

        <!--Small Image 1-->
        <TextView
            android:id="@+id/small_image_1_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="12dp"
            android:text="Fruta"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/imagem_mem_ep_principal"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginLeft="128dp" />

        <TextView
            android:id="@+id/small_image_1_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:text="Morango"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/imagem_mem_ep_principal"
            app:layout_constraintTop_toBottomOf="@+id/small_image_1_tipo"
            android:layout_marginLeft="128dp" />

        <ImageView
            android:id="@+id/img1_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/a_morango"
            app:layout_constraintStart_toEndOf="@+id/imagem_mem_ep_principal"
            app:layout_constraintTop_toBottomOf="@+id/small_image_1_nome"
            android:layout_marginLeft="120dp" />

        <Button
            android:id="@+id/img1_button_indicou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Indicou"
            android:onClick="onClickIndicou"
            app:layout_constraintStart_toEndOf="@+id/img1_image_view"
            app:layout_constraintTop_toBottomOf="@+id/small_image_1_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/img1_button_nomeou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Nomeou"
            android:onClick="onClickNomeou"
            app:layout_constraintStart_toEndOf="@+id/img1_image_view"
            app:layout_constraintTop_toBottomOf="@+id/img1_button_indicou"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <!--Small Image 2-->
        <TextView
            android:id="@+id/small_image_2_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:text="Lugar/Construção"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/img1_button_indicou"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginLeft="128dp" />

        <TextView
            android:id="@+id/small_image_2_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Igraja"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/img1_button_indicou"
            app:layout_constraintTop_toBottomOf="@+id/small_image_2_tipo"
            android:layout_marginLeft="128dp" />

        <ImageView
            android:id="@+id/img2_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/a_igreja"
            app:layout_constraintStart_toEndOf="@+id/img1_button_indicou"
            app:layout_constraintTop_toBottomOf="@+id/small_image_2_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="48dp" />

        <Button
            android:id="@+id/img2_button_indicou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Indicou"
            android:onClick="onClickIndicou"
            app:layout_constraintStart_toEndOf="@+id/img2_image_view"
            app:layout_constraintTop_toBottomOf="@+id/small_image_2_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/img2_button_nomeou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Nomeou"
            android:onClick="onClickNomeou"
            app:layout_constraintStart_toEndOf="@+id/img2_image_view"
            app:layout_constraintTop_toBottomOf="@+id/img2_button_indicou"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <!--Small Image 3-->
        <TextView
            android:id="@+id/small_image_3_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="12dp"
            android:text="Utensílio de cozinha"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/imagem_mem_ep_principal"
            app:layout_constraintTop_toBottomOf="@+id/img1_image_view"
            android:layout_marginLeft="128dp" />

        <TextView
            android:id="@+id/small_image_3_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:text="Garfo"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/imagem_mem_ep_principal"
            app:layout_constraintTop_toBottomOf="@+id/small_image_3_tipo"
            android:layout_marginLeft="128dp" />


        <ImageView
            android:id="@+id/img3_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/a_garfo"
            app:layout_constraintStart_toEndOf="@+id/imagem_mem_ep_principal"
            app:layout_constraintTop_toBottomOf="@+id/small_image_3_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="120dp" />

        <Button
            android:id="@+id/img3_button_indicou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Indicou"
            android:onClick="onClickIndicou"
            app:layout_constraintStart_toEndOf="@+id/img3_image_view"
            app:layout_constraintTop_toBottomOf="@+id/small_image_3_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/img3_button_nomeou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Nomeou"
            android:onClick="onClickNomeou"
            app:layout_constraintStart_toEndOf="@+id/img3_image_view"
            app:layout_constraintTop_toBottomOf="@+id/img3_button_indicou"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <!--Small Image 4-->
        <TextView
            android:id="@+id/small_image_4_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:text="Instrumento musical"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/img1_button_indicou"
            app:layout_constraintTop_toBottomOf="@+id/img2_image_view"
            android:layout_marginLeft="128dp" />

        <TextView
            android:id="@+id/small_image_4_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Violão"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/img1_button_indicou"
            app:layout_constraintTop_toBottomOf="@+id/small_image_4_tipo"
            android:layout_marginLeft="128dp" />

        <ImageView
            android:id="@+id/img4_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/a_violao"
            app:layout_constraintStart_toEndOf="@+id/img3_button_indicou"
            app:layout_constraintTop_toBottomOf="@+id/small_image_4_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="120dp" />

        <Button
            android:id="@+id/img4_button_indicou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Indicou"
            android:onClick="onClickIndicou"
            app:layout_constraintStart_toEndOf="@+id/img4_image_view"
            app:layout_constraintTop_toBottomOf="@+id/small_image_4_nome"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/img4_button_nomeou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Nomeou"
            android:onClick="onClickNomeou"
            app:layout_constraintStart_toEndOf="@+id/img4_image_view"
            app:layout_constraintTop_toBottomOf="@+id/img4_button_indicou"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="8dp" />

        <!--Título do somatório tatal da memoria episodica fase 1-->
        <TextView
            android:id="@+id/title_total_mem_ep_fase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="TOTAL"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img3_image_view" />

        <!--Valor de indicacao do somatório tatal da memoria episodica fase 1-->
        <TextView
            android:id="@+id/title_indicacao_mem_ep_fase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="PONTUAÇÃO DE INDICAÇÕES:"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_total_mem_ep_fase1" />

        <TextView
            android:id="@+id/first_value_indicacao_mem_ep_fase1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/title_indicacao_mem_ep_fase1"
            app:layout_constraintTop_toBottomOf="@+id/title_total_mem_ep_fase1" />

        <TextView
            android:id="@+id/barra_indicacao_mem_ep_fase1"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="/"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/first_value_indicacao_mem_ep_fase1"
            app:layout_constraintTop_toBottomOf="@+id/title_total_mem_ep_fase1" />

        <TextView
            android:id="@+id/secound_value_indicacao_mem_ep_fase1"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="16"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/barra_indicacao_mem_ep_fase1"
            app:layout_constraintTop_toBottomOf="@+id/title_total_mem_ep_fase1" />

        <!--Valor de nomeação do somatório tatal da memoria episodica fase 1-->
        <TextView
            android:id="@+id/title_nomeacao_mem_ep_fase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="PONTUAÇÃO DE NOMEAÇÕES:"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_indicacao_mem_ep_fase1" />

        <TextView
            android:id="@+id/first_value_nomeacao_mem_ep_fase1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/title_nomeacao_mem_ep_fase1"
