        <TextView
            android:id="@+id/barra_nomeacao_mem_ep_fase1"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="/"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/first_value_nomeacao_mem_ep_fase1"
