                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="46s - 60s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fluencia_verbal_linear_layout_animais_edit_texts"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fluencia_Verbal_animais_et_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />

            <EditText
                android:id="@+id/fluencia_Verbal_animais_et_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />

            <EditText
                android:id="@+id/fluencia_Verbal_animais_et_3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />

            <EditText
                android:id="@+id/fluencia_Verbal_animais_et_4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="935dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tableRow"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="P: Agora vou pedir para o(a) senhor(a) falar durante um minuto palavras iniciadas com a letra P. Não serão aceitos nomes próprios. Eu irei avisá-lo(a) quando o(a) senhor(a) puder começar e quando o tempo acabar. Peço para que o(a) senhor(a) feche os olhos para realizar esta tarefa. Está pronto(a)? Podemos começar?"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="935dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tableRow"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:text="Para inciar o cronômetro clique duas vezes no primeiro campo de preenchimento (00s - 15s)."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <LinearLayout
            android:id="@+id/fluencia_verbal_linear_layout_timers_palavras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Chronometer
                    android:id="@+id/fluencia_verbal_palavras_timer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

