                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="00s - 15s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Chronometer
                    android:id="@+id/fluencia_verbal_palavras_timer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/fluencia_verbal_palavras_timer_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="16s - 30s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Chronometer
                    android:id="@+id/fluencia_verbal_palavras_timer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/fluencia_verbal_palavras_timer_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="31s - 45s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Chronometer
                    android:id="@+id/fluencia_verbal_palavras_timer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/fluencia_verbal_palavras_timer_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="46s - 60s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fluencia_verbal_linear_layout_palavras_edit_texts"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <EditText
                android:id="@+id/fluencia_Verbal_palavras_et_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />
            <EditText
                android:id="@+id/fluencia_Verbal_palavras_et_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />
            <EditText
                android:id="@+id/fluencia_Verbal_palavras_et_3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />
            <EditText
                android:id="@+id/fluencia_Verbal_palavras_et_4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:overScrollMode="always"
                android:scrollHorizontally="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal|vertical" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_continuar_fluencia_verbal"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Continuar"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />


    </LinearLayout>
</ScrollView>