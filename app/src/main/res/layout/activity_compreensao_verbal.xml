<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hercilio.appwithfirebase.Funcionalidades.Bateria.CompreensaoFrases.CompreensaoFrasesRadioActivity">


    <TextView
        android:id="@+id/bateria_compreensao_verbal_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_span="6"
        android:text="@string/bateria_tipopergunta_compfrases"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp"
        tools:ignore="MissingConstraints" />

    <TableRow
        android:id="@+id/tableRow1_verbal"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/bateria_compreensao_verbal_titulo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/instrucoesVerb"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="2dp"
            android:layout_span="4"
            android:background="@color/colorPrimary" />
    </TableRow>

    <TextView
        android:id="@+id/instrucoesVerbal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Instruções"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tableRow1_verbal"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="O (a) senhor (a) vai ouvir um pequeno texto. Peço que ouça com atenção. Não vou poder repetir. Logo  depois vou lhe pedir para recontar essa mesma história com o maior número de detalhes possíveis. O (a) senhor (a)  compreendeu? Podemos começar?"
        app:layout_constraintTop_toBottomOf="@+id/instrucoesVerbal"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TableRow
        android:id="@+id/tableRow2_verbal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/instrucoesVerb"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="2dp"
            android:layout_span="4"
            android:background="@color/colorPrimary" />
    </TableRow>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Lúcia mora no interior do Paraná. Numa manhã de segunda-feira, ela saiu de casa para mais uma entrevista de trabalho na capital do estado. Ela foi para a rodoviária de carona com seu amigo Pedro. Estava chovendo naquela manhã. De repente, o carro passou por um buraco e o pneu furou. Lúcia pensou que iria perder o ônibus. Então, ela pegou um táxi até a rodoviária e conseguiu chegar a tempo."
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="showTextButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2_verbal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Avaliação"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="2dp"
            android:layout_span="4"
            android:background="@color/colorPrimary" />
    </TableRow>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Instrução: Agora vou solicitar que o (a) senhor (a) conte para mim a história com o maior número de detalhes que lembrar."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_primeira_avaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Clique aqui para avaliar a primeira instrução"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</android.support.constraint.ConstraintLayout>