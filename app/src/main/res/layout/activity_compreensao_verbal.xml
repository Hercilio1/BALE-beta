<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hercilio.appwithfirebase.Funcionalidades.Bateria.CompreensaoFrases.CompreensaoFrasesRadioActivity">


    <TextView
        android:id="@+id/bateria_compreensao_verbal_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_span="6"
        android:text="@string/bateria_tipopergunta_compfrases"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp"
        tools:ignore="MissingConstraints" />

    <TableRow
        android:id="@+id/tableRow1_verbal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/bateria_compreensao_verbal_titulo"
        tools:layout_editor_absoluteX="89dp"
        tools:ignore="MissingConstraints">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/instrucoesVerb"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="2dp"
            android:layout_span="4"
            android:background="@color/colorPrimary" />
    </TableRow>

    <TextView
        android:id="@+id/instrucoesVerbal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Instruções"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tableRow1_verbal"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="O (a) senhor (a) vai ouvir um pequeno texto. Peço que ouça com atenção. Não vou poder repetir. Logo  depois vou lhe pedir para recontar essa mesma história com o maior número de detalhes possíveis. O (a) senhor (a)  compreendeu? Podemos começar?"
        app:layout_constraintTop_toBottomOf="@+id/instrucoesVerbal"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TableRow
        android:id="@+id/tableRow2_verbal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/instrucoesVerb"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="2dp"
            android:layout_span="4"
            android:background="@color/colorPrimary" />
    </TableRow>

    <Button
        android:id="@+id/btn_p_lucia"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Lúcia"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btn_p_mora"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="mora"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_p_lucia"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btn_p_no_interior"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="no inteirior"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_p_mora"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btn_s_do_parana"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/blue_compVerbal"
        android:text="do Paraná."
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_p_no_interior"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btn_s_numa_manha"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/blue_compVerbal"
        android:text="Numa manhã"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_s_do_parana"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btn_s_de_segundafeira"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/blue_compVerbal"
        android:text="de segunda-feira"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_p_lucia"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_p_ela_saiu"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="ela saiu"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_s_de_segundafeira"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:id="@+id/btn_irrelevante1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:text="de casa para mais uma"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_p_ela_saiu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:id="@+id/btn_p_entrevista_trabalho"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="entrevista de trabalho"

        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btn_irrelevante1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="256dp" />












    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Lúcia [ ] mora [ ] no interior [ ] do Paraná ( ). Numa manhã ( ) de segunda-feira ( ), ela saiu [ ] de casa para mais  uma entrevista de trabalho [ ] na capital [ ] do estado. Ela foi [ ] para a rodoviária [ ] de carona [ ] com seu  amigo { } Pedro { }. Estava chovendo ( ) naquela manhã. De repente, o carro ( ) passou por um buraco ( ) e o pneu  furou [ ]. Lúcia pensou que iria perder o ônibus ( ). Então, ela pegou um táxi [ ] até a rodoviária ( ) e conseguiu  chegar a tempo [ ]."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="312dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>