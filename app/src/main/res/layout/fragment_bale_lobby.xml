<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left|center_horizontal"
    android:orientation="vertical"
    tools:context=".Funcionalidades.Bateria.Lobby.BaleLobbyActivity" >

    <RelativeLayout
        android:id="@+id/rly_habitos_leitura_escrita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            CircleProgressView:cpv_value="0"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_barColor="@color/colorPrimaryDark"
            CircleProgressView:cpv_rimColor="@color/colorPrimary"
            CircleProgressView:cpv_textColor="@color/colorPrimaryDark"
            CircleProgressView:cpv_unitColor="@color/colorPrimaryDark"
            CircleProgressView:cpv_spinColor="@color/colorPrimary"
            CircleProgressView:cpv_barWidth="7dp"
            CircleProgressView:cpv_rimWidth="7dp"
            CircleProgressView:cpv_contourSize="0dp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_seekMode="false"
            CircleProgressView:cpv_unit="%"
            CircleProgressView:cpv_unitPosition="right_top"
            CircleProgressView:cpv_unitScale="1"
            CircleProgressView:cpv_textScale="1"
            CircleProgressView:cpv_showUnit="true"
            android:padding="10dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/bl_compreensao_frases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/circleView"
            android:layout_toRightOf="@+id/circleView"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:text="Habitos de Leitura e Escrita"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_compreensao_frases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView_comp_frases"
            android:layout_width="100dp"
            android:layout_height="100dp"
            CircleProgressView:cpv_value="0"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_barColor="@color/colorPrimaryDark"
            CircleProgressView:cpv_rimColor="@color/colorPrimary"
            CircleProgressView:cpv_textColor="@color/colorPrimaryDark"
            CircleProgressView:cpv_unitColor="@color/colorPrimaryDark"
            CircleProgressView:cpv_spinColor="@color/colorPrimary"
            CircleProgressView:cpv_barWidth="7dp"
            CircleProgressView:cpv_rimWidth="7dp"
            CircleProgressView:cpv_contourSize="0dp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_seekMode="false"
            CircleProgressView:cpv_unit="%"
            CircleProgressView:cpv_unitPosition="right_top"
            CircleProgressView:cpv_unitScale="1"
            CircleProgressView:cpv_textScale="1"
            CircleProgressView:cpv_showUnit="true"
            android:padding="10dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/bl_comp_frases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/circleView_comp_frases"
            android:layout_toRightOf="@+id/circleView_comp_frases"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:text="CompreensÃ£o de Frases"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>