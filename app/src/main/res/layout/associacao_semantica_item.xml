<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rly_narrativa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp" >

    <ImageButton
        android:id="@+id/grid_item_assiciacao_semantica_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/grid_item_assiciacao_semantica_img"
        android:layout_toRightOf="@+id/grid_item_assiciacao_semantica_img">

        <TextView
            android:id="@+id/grid_item_assiciacao_semantica_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="18dp"
            android:text="maçã - uva"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/grid_item_assiciacao_semantica_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/grid_item_assiciacao_semantica_errou_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Errou"
                android:layout_marginRight="8dp"
                android:onClick="onClickRadio"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioButton
                android:id="@+id/grid_item_assiciacao_semantica_parcialmente_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Parcialmente"
                android:onClick="onClickRadio"
                android:layout_marginRight="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioButton
                android:id="@+id/grid_item_assiciacao_semantica_acertou_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Acertou"
                android:onClick="onClickRadio"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RadioGroup>

    </LinearLayout>



</RelativeLayout>